<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/remindr_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.remindr.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_fullReminderFragment"
            app:destination="@id/fullReminderFragment" />
        <action
            android:id="@+id/action_homeFragment_to_editReminderFragment"
            app:destination="@id/editReminderFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.remindr.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.remindr.auth.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.remindr.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/fullReminderFragment"
        android:name="com.example.remindr.FullReminderFragment"
        android:label="fragment_full_reminder"
        tools:layout="@layout/fragment_new_reminder" >
        <action
            android:id="@+id/action_fullReminderFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_fullReminderFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
        <argument
            android:name="location_x"
            app:argType="string" />
        <argument
            android:name="location_y"
            app:argType="string" />
        <argument
            android:name="latlng"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/editReminderFragment"
        android:name="com.example.remindr.EditReminderFragment"
        android:label="fragment_edit_reminder"
        tools:layout="@layout/fragment_edit_reminder" >
        <action
            android:id="@+id/action_editReminderFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="currentUser"
            app:argType="com.example.remindr.database.Reminder" />
        <action
            android:id="@+id/action_editReminderFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
        <argument
            android:name="location_x"
            app:argType="string" />
        <argument
            android:name="location_y"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.remindr.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" >
        <action
            android:id="@+id/action_mapsFragment_to_fullReminderFragment"
            app:destination="@id/fullReminderFragment" />
        <action
            android:id="@+id/action_mapsFragment_to_editReminderFragment"
            app:destination="@id/editReminderFragment" />
        <argument
            android:name="previous_location"
            app:argType="string" />
        <argument
            android:name="location_x"
            app:argType="string" />
        <argument
            android:name="location_y"
            app:argType="string" />
    </fragment>
</navigation>